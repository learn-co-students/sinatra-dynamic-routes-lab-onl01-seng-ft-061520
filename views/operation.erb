<!DOCTYPE html>

<%
  @operation = params[:operation]
  @num1 = params[:number1].to_i
  @num2 = params[:number2].to_i
%>
<%
  case @operation
  when "add"
%>
    <h1><%= @num1 + @num2 %></h1>
<% when "subtract" %>
    <h1><%= @num1 - @num2  %></h1>
<% when "divide" %>
    <h1><%= @num1 / @num2  %></h1>
<% when "multiply" %>
    <h1><%= @num1 * @num2  %></h1>
<% end %>
